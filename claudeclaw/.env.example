# ClaudeClaw Configuration
# Copy to .env and fill in your values

# Required: At least one API key
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Optional: Default backend (claude | openai)
CLAW_DEFAULT_BACKEND=claude

# Optional: Default model override
CLAW_DEFAULT_MODEL=

# Optional: Data directory (defaults to ~/.claudeclaw)
CLAW_DATA_DIR=

# Optional: Log level (debug | info | warn | error)
CLAW_LOG_LEVEL=info

# Optional: Web server
CLAW_WEB_PORT=3100
CLAW_WEB_HOST=127.0.0.1

# Optional: Telegram bot
CLAW_TELEGRAM_TOKEN=

# Optional: Discord bot
CLAW_DISCORD_TOKEN=

# Optional: Slack bot
CLAW_SLACK_BOT_TOKEN=
CLAW_SLACK_APP_TOKEN=
CLAW_SLACK_SIGNING_SECRET=

# Optional: Vector memory (semantic search)
CLAW_VECTOR_MEMORY_ENABLED=false
