{
  "name": "claudeclaw",
  "version": "0.1.0",
  "description": "Open-source personal AI assistant with first-class Claude and OpenAI support",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "claw": "dist/bin/claw.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "start": "node dist/bin/claw.js",
    "start:prod": "NODE_ENV=production node dist/bin/claw.js serve web",
    "docker:build": "docker build -t claudeclaw .",
    "docker:run": "docker compose up -d"
  },
  "keywords": [
    "ai",
    "assistant",
    "claude",
    "openai",
    "agent"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^9.0.0",
    "@fastify/websocket": "^11.2.0",
    "better-sqlite3": "^12.6.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "dotenv": "^17.3.1",
    "fastify": "^5.7.4",
    "nanoid": "^5.1.6",
    "openai": "^6.22.0",
    "ora": "^9.3.0",
    "pino": "^10.3.1",
    "zod": "^4.3.6"
  },
  "peerDependencies": {
    "@slack/bolt": "^4.1.0",
    "discord.js": "^14.16.0",
    "playwright": "^1.48.0",
    "telegraf": "^4.16.0"
  },
  "peerDependenciesMeta": {
    "telegraf": {
      "optional": true
    },
    "discord.js": {
      "optional": true
    },
    "@slack/bolt": {
      "optional": true
    },
    "playwright": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^3.2.4",
    "pino-pretty": "^13.1.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
