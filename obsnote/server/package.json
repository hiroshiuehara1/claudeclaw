{
  "name": "obsnote-server",
  "version": "1.0.0",
  "description": "Cloud note API with admin monitoring",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "node --watch src/server.js",
    "start": "node src/server.js",
    "seed:admin": "node scripts/seedAdmin.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "audit:report": "npm audit --omit=dev --json > audit-report.json || true",
    "audit:report:all": "npm audit --json > audit-report-all.json || true",
    "audit:check": "AUDIT_FAIL_LEVEL=moderate node scripts/check-audit.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.2",
    "morgan": "^1.10.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.9",
    "mongodb-memory-server": "^10.1.2",
    "supertest": "^7.0.0",
    "vitest": "^2.1.8"
  }
}
