# Storage
CODEXCLAW_DATA_DIR=~/.codexclaw
CODEXCLAW_DB_PATH=~/.codexclaw/memory.db

# Backend behavior
CODEXCLAW_DEFAULT_BACKEND=auto
CODEXCLAW_REQUEST_TIMEOUT_MS=90000
CODEXCLAW_MAX_OUTPUT_BYTES=1000000
CODEXCLAW_RETRY_ATTEMPTS=1
CODEXCLAW_BREAKER_FAILURE_THRESHOLD=3
CODEXCLAW_BREAKER_RESET_MS=30000

# Web server
CODEXCLAW_WEB_HOST=127.0.0.1
CODEXCLAW_WEB_PORT=3180

# Workspace and UI path
CODEXCLAW_WORKSPACE_DIR=.
CODEXCLAW_PUBLIC_DIR=src/interfaces/web/public
